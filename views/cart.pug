extends layout

mixin row
    #cartRow.d-none
        .row.justify-content-center.cartRow(data-book-id="%bookId%")
            .col-11.col-md-6.border-bottom.mb-3
                p %title%
            .col-1.border-bottom.mb-3
                button.btn.btn-danger.removeButton(data-book-id="%bookId%") Remove


block head
    link(rel='stylesheet', href='/assets/css/carousel.css')
    link(rel='stylesheet', href='/assets/css/index.css')

block headline
    #myCarousel.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
        .carousel-inner
            .opaque-overlay
            .carousel-item.active
                img.first-slide(src="https://images.unsplash.com/photo-1488815812041-73ab30a49bb9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80", alt="Something inside a basket")
                .container
                    .carousel-caption
                        h1 Your shopping cart
                        p
                            | Review your reservations and check out now!
                        p
                            a.btn.btn-lg.btn-primary(href="/ourbooks", role='button') Add another book

block content
    .container
        h3.title.my-5 All prices include VAT where applicable
        #cartTable
        .row.justify-content-center
            button#reserveButton.btn.btn-primary.w-100.col-md-4.col-lg-2 Reserve
            p#emptyCart Nothing in your cart
    +row

append js
    script(src="/assets/js/cart.js")