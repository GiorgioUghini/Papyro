mixin featuretteleft(title, titlespec, description, image, alt)
    .row.featurette
        .col-md-7
            h2.featurette-heading= title
                span.text-muted= titlespec
            p.lead!= description
        .col-md-5
            img.featurette-image.img-fluid.mx-auto(src=image, alt=alt)
