mixin headline(mainTitle, subheading, buttonText, href, backgroundImage)
    .headline.position-relative.overflow-hidden.p-3.p-md-5.m-md-3.text-center.bg-light(style='background-image: url(' + backgroundImage + ');')
        .col-md-5.p-lg-5.mx-auto.my-5
            h1.display-3.font-weight-bold.text-light= mainTitle
            p.lead.font-weight-normal.text-light= subheading
            a.btn.btn-outline-light(href=href)= buttonText