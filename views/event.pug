extends layout

block head
    link(rel='stylesheet', href='/assets/css/carousel.css')
    link(rel='stylesheet', href='/assets/css/index.css')
    link(rel='stylesheet', href='/assets/css/events.css')

block headline
    #myCarousel.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
        .carousel-inner
            .opaque-overlay
            .carousel-item.active
                img.first-slide(src="https://images.unsplash.com/photo-1455390582262-044cdead277a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1266&q=80", alt="An old pen is being used on some yellow paper")
                .container
                    .carousel-caption
                        h1#name
                        p
                            | Join us and discover everything about this book!

block content
    .container.mt-5
        h3.title.my-5 Event's ticket are distributed for free each Monday at Papyro's Library.
        .row
            .col-md-6.col-lg-3
                img.w-100.mb-3#picture(src="", alt="")
                a.btn.btn-primary.my-3.w-100#bookDetails(href="") View Book details
            .col-md-6.col-lg-9
                h1.title#title
                h3.title Location
                p#location
                h3.title Date
                p#date

append js
    script(src="/assets/js/event.js")