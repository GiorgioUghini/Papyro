extends layout

block head
    link(rel='stylesheet', href='/assets/css/carousel.css')
    link(rel='stylesheet', href='/assets/css/authors.css')
    link(rel='stylesheet', href='/assets/css/index.css')

block headline
    #myCarousel.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
        .carousel-inner
            .opaque-overlay
            .carousel-item.active
                img.first-slide(src="https://images.unsplash.com/photo-1455390582262-044cdead277a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1266&q=80", alt="Some old books in a library")
                .container
                    .carousel-caption
                        h1.text-center Authors
                        p
                            | Browse through our big catalog of authors and choose your favourite!

block content
    .container
        h3.pb-3.mb-4.ce.border-bottom
            | Take your time, we've got plenty of authors. Just pick one of your choice.
        #authors
    #author-left.d-none
        .row
            .col-md-6.col-lg-3
                img.w-100.mb-3(src="%picture%", alt="")
                a.btn.btn-primary.w-100.my-2(href="/authors/%id%") More info
            .col-md-6.col-lg-9
                h2.title %name%
                p %bio%
        hr.w-100
    #author-right.d-none
        .row
            .col-md-6.col-lg-9.text-right
                h2.title %name%
                p %bio%
            .col-md-6.col-lg-3
                img.w-100.mb-3(src="%picture%", alt="")
                a.btn.btn-primary.w-100.my-2(href="/authors/%id%") More info
            hr.w-100.my-3


append js
    script(src="/assets/js/authors.js")